{
  "name": "@keycloakify/svelte-email",
  "version": "0.0.6",
  "description": "Build emails with Svelte",
  "type": "module",
  "keywords": [
    "svelte",
    "keycloakify",
    "email"
  ],
  "author": {
    "name": "Luca Peruzzo",
    "email": "peruzzoluca98@gmail.com"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keycloakify/svelte-email.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "_format": "prettier '**/*.{ts,html,json,md,svelte}'",
    "format": "yarn _format --write",
    "lint": "yarn format && eslint . --fix"
  },
  "devDependencies": {
    "@iconify-json/ri": "^1.2.5",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.1",
    "@sveltejs/package": "^2.3.9",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "@types/html-to-text": "^9.0.4",
    "@types/pretty": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-svelte": "^2.46.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "npm-check-updates": "^17.1.14",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.19.3",
    "svelte-check": "^4.1.4",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.11"
  },
  "dependencies": {
    "html-to-text": "^9.0.5",
    "pretty": "^2.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./render": {
      "types": "./dist/render.d.ts",
      "svelte": "./dist/render.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "svelte": "./dist/utils.js"
    },
    "./components/Body.svelte": {
      "types": "./dist/components/Body.svelte.d.ts",
      "svelte": "./dist/components/Body.svelte"
    },
    "./components/Button.svelte": {
      "types": "./dist/components/Button.svelte.d.ts",
      "svelte": "./dist/components/Button.svelte"
    },
    "./components/Column.svelte": {
      "types": "./dist/components/Column.svelte.d.ts",
      "svelte": "./dist/components/Column.svelte"
    },
    "./components/Container.svelte": {
      "types": "./dist/components/Container.svelte.d.ts",
      "svelte": "./dist/components/Container.svelte"
    },
    "./components/Head.svelte": {
      "types": "./dist/components/Head.svelte.d.ts",
      "svelte": "./dist/components/Head.svelte"
    },
    "./components/Heading.svelte": {
